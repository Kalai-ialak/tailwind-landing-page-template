version: '3.8'

services:
  # 1. Developer Environment
  dev-app:
    build:
      context: .
      target: dev
    container_name: tailwind-dev
    ports:
      - "3000:3000"
    volumes:
      - .:/app
      - /app/node_modules
    environment:
      - NODE_ENV=development

  # 2. Production Environment
  prod-app:
    build:
      context: .
      target: prod
    container_name: tailwind-prod
    ports:
      - "8080:80"
    environment:
      - NODE_ENV=production
